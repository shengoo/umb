    var deep = Model.DocumentTypeAlias == "ProductFolder" || Model.DocumentTypeAlias == "ProductItem" ? 4 : 3;
    var links = Umbraco.TypedContent(homepage.GetPropertyValue<string>("leftStatic").Split(',')).ToArray();
