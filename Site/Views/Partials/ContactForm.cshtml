@inherits Umbraco.Web.Mvc.UmbracoViewPage<Koiak.StandardWebsite.ContactFormModel>
@{
    Layout = null;
}

@using (Html.BeginUmbracoForm("SendEmail", "ContactFormSurface", new { }, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <label class="col-sm-2 control-label">@library.GetDictionaryItem("name")</label>
        <div class="col-sm-10">
            @Html.EditorFor(x => Model.Name)
            @Html.ValidationMessageFor(x => Model.Name, "", new { @class = "alert" })
            </div>
        </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">@library.GetDictionaryItem("email")</label>
        <div class="col-sm-10">
            @Html.EditorFor(x => Model.Email)
            @Html.ValidationMessageFor(x => Model.Email, "", new { @class = "alert" })
        </div>
        </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">@library.GetDictionaryItem("comment")</label>
        <div class="col-sm-10">
            @Html.EditorFor(x => Model.Comment)
            @Html.ValidationMessageFor(x => Model.Comment, "", new { @class = "alert" })
        </div>
        </div>


    <div>
        <input class="btn btn-default" type="submit" name="Submit"/>
    </div>

}

