@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using Site.App_Code
@{
    Layout = null;
    var homepage = Model.Content.AncestorOrSelf(1);
}
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>@Model.Content.GetPropertyValue("title")</title>
        <meta name="keywords" content="@Model.Content.GetPropertyValue("keywords")" />
        <meta name="description" content="@Model.Content.GetPropertyValue("description")">
        <meta name="viewport" content="width=device-width">

        <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->

        <script src="/scripts/vendor/modernizr-2.6.2.min.js"></script>

        <!-- bootstrap -->
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/bootstrap-theme.min.css">

        <link rel="stylesheet" href="/css/style.css" type="text/css" media="all" />

        <link rel="icon" href="/favicon.ico" type="image/x-icon">
        <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
        <link rel="apple-touch-icon-precomposed" href="/apple-touch-icon-precomposed.png" />

        <script src="/scripts/vendor/jquery-1.11.1.min.js"></script>
        @RenderSection("styles", required: false)
    </head>
    <body>

        <div class="outer">
            <!-- header -->
            <header class="header">
                <div class="logo"><a href="@homepage.GetAliasOrUrl()"><img src="/images/logo.jpg"></a></div>
                <div class="lang_s">
                    @Umbraco.RenderMacro("MLLanguageSwitcher", new {RenderType="List" })
                </div>
                <div class="clearfix"></div>
                @Html.Partial("TopNav")

            </header>
            <!-- end of header -->
            
            <!-- breadcrumb -->

            @Html.Partial("Breadcrumb")

            <!-- end of breadcrumb -->

            <main>
                @RenderBody()
            </main>
            @Html.Partial("FooterNav")
            @*<div id="footer" class="fc">
                <div class="page-width">
                    @Html.Partial("Affiliations",homepage)
                    <p>@homepage.GetPropertyValue("address")</p>
                    <p>@Html.Raw(homepage.GetPropertyValue<string>("copyright"))</p>
                </div>
            </div>*@
            <div class="copyright">
                @Html.Raw(homepage.GetPropertyValue<string>("copyright"))
            </div>
        </div>
        <script src="/scripts/vendor/bootstrap.min.js"></script>
        @RenderSection("scripts", required: false)
    </body>
</html>